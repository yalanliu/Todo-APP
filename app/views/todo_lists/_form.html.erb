<%= form_with(model: todo_list, local: true) do |form| %>
  <% if todo_list.errors.any? %>
    <div class="alert">
      <span class="font-weight-bold"><%= pluralize(todo_list.errors.count, "item") %> Please Check again!</span><br>
      <% todo_list.errors.full_messages.each do |message| %>
        <span class="error-message-text"><%= message %></span><br>
      <% end %>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control form-control-deco' %>
  </div>

  <div class="field form-group mb-3">
    <%= form.label :description %>
    <%= form.text_area :description, rows: "5", class: 'form-control form-control-deco' %>
  </div>

  <div class="actions text-right">
    <%= form.submit class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
